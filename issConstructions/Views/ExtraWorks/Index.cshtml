@model IEnumerable<issDomain.Models.ExtraWork>

@{
    ViewBag.Title = "Index";
}

<style>
    .header {
        margin-top: 10px;
        border-top-style: solid;
        border-top-width: 5px;
        border-top-color: #FF5F04;
        font-family: Calibri;
        font-size: 22px;
    }

    .addNew {
        padding: 5px;
        background-color: #FF5F04;
        color: white;
        float: right;
        margin: 10px;
        border-radius: 10px;
        text-decoration: none;
    }

        .addNew:hover {
            text-decoration: none;
        }

    table td {
        font-size: 13px;
    }

    table th {
        font-size: 13px;
    }
</style>
<div class="panel-group">
    <div class="panel panel-heading header">
        Extra Work - Index Page
    </div>
    <div class="panel panel-body">
        <div class="card-header header-elements-inline">
            @Html.ActionLink("Add New", "Create", null, htmlAttributes: new { @class = "addNew" })
            <table class="table datatable-basic table-bordered table-striped table-hover" id="AGMaster">
                <thead>
                    <tr>
                        <th>
                            <label>Work ID</label>
                        </th>
                        <th>
                            <label> Date</label>
                        </th>
                        <th>
                            <label>Project Name</label>
                        </th>
                        <th>
                            <label>Site No</label>
                        </th>
                        <th>
                            <label>Site Name</label>
                        </th>
                        <th>
                            <label>Site Address</label>
                        </th>
                        <th>
                            <label>Head Name</label>
                        </th>
                        <th>
                            <label>Total Amount</label>
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExtraWorkId)
                            </td>

                            @if (@item.date != null)
                            {
                                <td>
                                    @item.date.Value.ToShortDateString()
                                </td>
                            }
                            else
                            {
                                <td></td>
                            }
                            <td>
                                @Html.DisplayFor(modelItem => item.SiteName.ProjectName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SiteName.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SiteName.SiteName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SiteName.SiteAddress)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.headName)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.totalAmt)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                                <a href="@Url.Content("~/ExtraWorkTables/Index/"+item.ExtraWorkId)">Edit Items</a>
                            </td>
                        </tr>

                    }
                </tbody>

            </table>

        </div>
    </div>
    </div>
