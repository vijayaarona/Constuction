@model IEnumerable<issDomain.Models.EmployeeMaster>

@{
    ViewBag.Title = "Index";
}


<style>
    .header {
        margin-top: 10px;
        border-top-style: solid;
        border-top-width: 5px;
        border-top-color: #FF5F04;
        font-family: Calibri;
        font-size: 22px;
    }

    .addNew {
        padding: 5px;
        background-color: #FF5F04;
        color: white;
        float: right;
        margin: 10px;
        border-radius: 3px;
        text-decoration: none;
    }

        .addNew:hover {
            text-decoration: none;
        }
</style>
<div class="panel-group"  style="overflow:scroll">
    <div class="panel panel-heading header">
        Employee - Index Page
    </div>
    <div class="panel panel-body" style="overflow:auto">
        @Html.ActionLink("Add New", "Create", null, htmlAttributes: new { @class = "addNew" })
        <table class="table" id="AGMaster"  >
            <thead>
                <tr>
                    <th>
                      Employee Name 
                    </th>

                    <th>
                        Mobile No
                    </th>

                    <th>
                       Designation
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Date of Join
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                       Salary Type
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Mobilenumber)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Designation.DesignationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateofJoin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SalaryType)
                    </td>
                    
                    
                </tr>

                }
            </tbody>

        </table>

    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#AGMaster').DataTable({
            dom: 'Bfrtip',

            buttons: [
                'copy',
                {
                    extend: 'excel',
                    title: function () {
                        var printTitle = 'New Title';
                        return printTitle
                    }
                   // messageTop: 'The information in this table is copyright to Sirius Cybernetics Corp.'
                },
                {
                    extend: 'pdf',
                  //  messageBottom: null
                },
                {
                    extend: 'print',
                }

            ]
        });

    });
</script>


