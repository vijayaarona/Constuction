@model issDomain.Models.ToolsTransfer

@{
    ViewBag.Title = "Delete";
}

<style>
    #AccountGroupMaster {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #AccountGroupMaster td, #customers th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #AccountGroupMaster tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #AccountGroupMaster tr:hover {
            background-color: #ddd;
        }

        #AccountGroupMaster th {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }

    #btn-edit a:hover {
        text-decoration: none;
        color: black;
    }

    #btn-edit a {
        text-decoration: none;
        color: black;
    }

    .header {
        margin-top: 10px;
        border-top-style: solid;
        border-top-width: 5px;
        border-top-color: #FF5F04;
        font-family: Calibri;
        font-size: 22px;
    }

    .btn-default {
        background-color: #FF5F04;
        color: white;
        float: right;
    }
</style>


<div class="panel-group">

    <div class="panel panel-heading header">
        Tools Transfer -  Delete Page

    </div>
    <div class="panel panel-body">

        <p style="font-weight:bold">Are you sure you want to delete this?</p>

        <table id="AccountGroupMaster">

            <tr>
                <th>Transfer ID</th>
                <td>  @Html.DisplayFor(model => model.TId) </td>
            </tr>

            <tr>
                <th>Transfer Date</th>
                <td>  @Html.DisplayFor(model => model.TDate) </td>
            </tr>

            <tr>
                <th>Transfer Type</th>
                <td> @Html.DisplayFor(model => model.Type.TypeName) </td>
            </tr>

            <tr>
                <th>Tools Name</th>
                <td> @Html.DisplayFor(model => model.Tools.ToolsName) </td>
            </tr>

            <tr>
                <th>Qty</th>
                <td> @Html.DisplayFor(model => model.qty) </td>
            </tr>

            <tr>
                <th>Authority Person</th>
                <td> @Html.DisplayFor(model => model.AuthPerson) </td>
            </tr>

            <tr>
                <th> Created Date</th>
                <td>   @Html.DisplayFor(model => model.CreatedDate)</td>
            </tr>

            <tr>
                <th> Updated By</th>
                <td>  @Html.DisplayFor(model => model.UpdatedBy)</td>
            </tr>
            <tr>
                <th> Updated  Date</th>
                <td>  @Html.DisplayFor(model => model.UpdatedDate)</td>
            </tr>

        </table>
        <hr style="text-decoration:none" />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>

