@model issDomain.Models.RateWorkTable

@{
    ViewBag.Title = "Details";
}

<
<style>
    #AccountGroupMaster {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    .btn-default {
        background-color: #FF5F04;
        color: white;
    }

    #AccountGroupMaster td, #customers th {
        border: 1px solid #ddd;
        padding: 8px;
    }

    #AccountGroupMaster tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    #AccountGroupMaster tr:hover {
        background-color: #ddd;
    }

    #AccountGroupMaster th {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: center;
    }

    #btn-edit a:hover {
        text-decoration: none;
        color: black;
    }

    #btn-edit a {
        text-decoration: none;
        color: black;
    }

    .header {
        margin-top: 10px;
        border-top-style: solid;
        border-top-width: 5px;
        border-top-color: #FF5F04;
        font-family: Calibri;
        font-size: 22px;
    }

    th {
        width: 40% !important;
    }
</style>


<div class="panel-group">
    <div class="panel panel-heading header">
        Labour Rate Work -  Item Details
    </div>
    <div class="panel panel-body">

        <table id="AccountGroupMaster">
            <tr>
                <th>Rate Work ID</th>
                <td>  @Html.DisplayFor(model => model.rateId)</td>
            </tr>
            <tr>
                <th>Description</th>
                <td> @Html.DisplayFor(model => model.Description)</td>
            </tr>

            <tr>
                <th>Length</th>
                <td>  @Html.DisplayFor(model => model.length)</td>
            </tr>
            <tr>
                <th> Breath</th>
                <td>  @Html.DisplayFor(model => model.Breath)</td>
            </tr>

            <tr>
                <th> Depth</th>
                <td>   @Html.DisplayFor(model => model.Deapth)</td>
            </tr>

            <tr>
                <th> Nos</th>
                <td>  @Html.DisplayFor(model => model.Nos)</td>
            </tr>

            <tr>
                <th> Quantity</th>
                <td>  @Html.DisplayFor(model => model.quantity)</td>
            </tr>

            <tr>
                <th> Unit Price</th>
                <td>  @Html.DisplayFor(model => model.unitPrice)</td>
            </tr>

            <tr>
                <th> Amount</th>
                <td>  @Html.DisplayFor(model => model.amount)</td>
            </tr>

            <tr>
                <th> UOM</th>
                <td>  @Html.DisplayFor(model => model.umo.UOM)</td>
            </tr>

        </table>


        <p style="float:right;">
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-default" })
            @Html.ActionLink("Back", "Index", new { Id = @Model.rateId }, htmlAttributes: new { @class = "btn btn-default" })
          
        </p>
    </div>
</div>
<script>
    $(function () {
        $('#rateId').val(@ViewBag.Pid);

    })
</script>